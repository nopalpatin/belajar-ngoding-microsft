#mengambil input dari user
#data yang dimasukan pasti string
nama = input("Masukkan nama Anda: ")
print("Halo,", nama)

#mengambil input dari user
nama = input("Masukkan nama Anda: ")
print("Halo,", nama)

#jika ingin mengambil input dari user berupa integer
angka = int(input("Masukkan angka: "))
print("Angka yang Anda masukkan adalah:", angka)

#jika ingin mengambil input dari user berupa float
angka = float(input("Masukkan angka: "))
print("Angka yang Anda masukkan adalah:", angka)

#jika ingin mengambil input dari user berupa boolean
boolean = bool(input("Masukkan boolean: "))
print("Boolean yang Anda masukkan adalah:", boolean)
